<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <Spinner
        android:id="@+id/sp_TiposCafe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:entries="@array/Spinner_TiposCafe" />

    <CheckBox
        android:id="@+id/cb_Azucar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CheckBox_Azucar" />

    <Switch
        android:id="@+id/sw_Si_No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/Switch_Si_No"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/tv_Recaudado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_Servir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Button_Servir_Cafe" />

    <TextView
        android:id="@+id/tv_Total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp" />
</LinearLayout>