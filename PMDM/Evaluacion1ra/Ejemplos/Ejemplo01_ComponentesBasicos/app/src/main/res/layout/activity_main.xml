<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagenAndroid"
            android:layout_width="69dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvMensaje" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="351dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:ems="10"
                android:hint="@string/placeHolderName"
                android:inputType="text"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/bRecuperarName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bRecuperarName" />

        </LinearLayout>

    </LinearLayout>

    <Switch
        android:id="@+id/swActivarDesactivar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/SwitchAD" />

    <RadioGroup
        android:id="@+id/rgEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbSoltero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbSoltero" />

        <RadioButton
            android:id="@+id/rbCasado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbCasado" />

        <RadioButton
            android:id="@+id/rbNSNC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbNSNC" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spColoresGUI"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:entries="@array/spColoresGUI" />

    <Spinner
        android:id="@+id/sp_Colores_Codigo"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton_HSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:text="Button" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/lv_ListaNombres"
        android:layout_width="wrap_content"
        android:layout_height="132dp">

    </ListView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvUno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#CDDC39"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cvimagenAndroide"
                        android:layout_width="69dp"
                        android:layout_height="65dp"
                        app:srcCompat="@drawable/ic_android_black_24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMensajecv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tvMensaje" />

                        <EditText
                            android:id="@+id/etNombrecv"
                            android:layout_width="351dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:ems="10"
                            android:hint="@string/placeHolderName"
                            android:inputType="text"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/bRecuperarNamecv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bRecuperarName" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#CDDC39"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cvimagenAndroidcv2"
                        android:layout_width="69dp"
                        android:layout_height="65dp"
                        app:srcCompat="@drawable/ic_android_black_24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMensajecv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tvMensaje" />

                        <EditText
                            android:id="@+id/etNombrecv2"
                            android:layout_width="351dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:ems="10"
                            android:hint="@string/placeHolderName"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/bRecuperarNamecv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bRecuperarName" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#CDDC39"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cvimagenAndroidcv3"
                        android:layout_width="69dp"
                        android:layout_height="65dp"
                        app:srcCompat="@drawable/ic_android_black_24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMensajecv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tvMensaje" />

                        <EditText
                            android:id="@+id/etNombrecv3"
                            android:layout_width="351dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:ems="10"
                            android:hint="@string/placeHolderName"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/bRecuperarNamecv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bRecuperarName" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>