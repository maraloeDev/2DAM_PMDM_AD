<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b_LanzarNavegador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/Button_LanzarNavegador" />

    <Button
        android:id="@+id/b_mandarCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/Button_EnviarCorreo" />

    <Button
        android:id="@+id/b_LlamarTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/Button_Telefono" />

    <Button
        android:id="@+id/b_lanzarGoogleMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/Button_LanzarGoogleMaps" />

    <Button
        android:id="@+id/b_Whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/Button_Whatsapp" />

    <Button
        android:id="@+id/b_Alertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/Button_Alertas" />

    <Button
        android:id="@+id/b_dialogoSeleccionMultiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/Button_dialogoMultiple" />

    <Button
        android:id="@+id/b_dialogoSelecciionSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/Button_DialogoSimple" />
</LinearLayout>